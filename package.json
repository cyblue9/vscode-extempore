{
    "name": "extempore",
    "displayName": "Extempore",
    "description": "Extempore language support",
    "version": "0.0.1",
    "publisher": "MOSO",
    "engines": {
        "vscode": "^1.18.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.sayHello"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [{
            "id": "extempore",
            "aliases": ["Extempore", "extempore"],
            "extensions": [".xtm"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "extempore",
            "scopeName": "source.extempore",
            "path": "./syntaxes/extempore.tmLanguage.json"
        }],
        "snippets": [{
            "langauge": "Extempore",
            "path": "./snippets/extempore.json"
        }],
        "commands": [{
                "command": "extension.sayHello",
                "title": "Hello World"
        }]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
