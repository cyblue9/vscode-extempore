{
    "name": "vscode-extempore",
    "displayName": "vscode-extempore",
    "description": "Extempore language support for VSCode",
    "version": "0.0.1",
    "publisher": "extemporelang",
    "engines": {
        "vscode": "^1.18.0"
    },
    "categories": [
        "Languages"
    ],
    "activationEvents": [
        "onCommand:extension.xtmsend",
        "onCommand:extension.xtmconnect",
        "onLanguage:extempore"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "extempore",
                "aliases": [
                    "Extempore",
                    "extempore"
                ],
                "extensions": [
                    ".xtm"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "extempore",
                "scopeName": "source.extempore",
                "path": "./syntaxes/extempore.tmLanguage.json"
            }
        ],
        "keybindings": [
            {
                "key": "ctrl+enter",
                "mac": "cmd+enter",
                "command": "extension.xtmsend",
                "when": "editorTextFocus"
            }
        ],
        "snippets": [
            {
                "language": "extempore",
                "path": "./snippets/extempore.json"
            }
        ],
        "commands": [
            {
                "command": "extension.xtmsend",
                "title": "Extempore Send"
            },
            {
                "command": "extension.xtmconnect",
                "title": "Extempore Connect"
            },
            {
                "command": "extension.xtmdisconnect",
                "title": "Extempore Disconnect"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {},
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
